<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Eggmania.Login">
    <ContentPage.Content>
        <ScrollView BackgroundColor="Gray">
            <StackLayout VerticalOptions="Center">
                <Image Source="logo_eggomania.png">
                    <Image.HeightRequest>
                        <OnPlatform x:TypeArguments="x:Double" Android="76" iOS="76">
                        </OnPlatform>
                    </Image.HeightRequest>
                </Image>
                <StackLayout Spacing="15" Padding="20" Margin="0,20,0,0">
                    <Entry x:Name="email" Placeholder="Email">
                    </Entry>
                    <Entry x:Name="password" Placeholder="Password">
                    </Entry>
                    <Button x:Name="btnLogin" Style="{StaticResource buttonStyle}" Text="Login">
                    </Button>
                    <Button x:Name="btnRegister" Style="{StaticResource buttonStyle}" Text="Register">
                    </Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>